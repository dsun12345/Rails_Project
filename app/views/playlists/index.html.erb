<h1>Listing playlists</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr> 
      <td><strong>Title</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @playlists.each do |playlist| %>
      <tr>

        <td><%= playlist.title %></td>
        <% if current_user.admin %>
          <td><%= link_to "Show #{playlist.title}", playlist_path(playlist) %></td>
        <% else %>
          <td><%= link_to "Go on #{playlist.title}", playlist_path(playlist) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if @user %>
  <p>
    <%= link_to "Back to profile", user_path(@user), {:class => "btn btn-primary"} %>
  </p>
<% else %>
  <p><%= link_to 'New Playlist', new_playlist_path %></p>
<% end %>